 <Window x:Class="Magazine_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:Magazine_WPF="clr-namespace:Magazine_WPF" 
        xmlns:view="clr-namespace:Magazine_WPF.View" 
        d:DataContext="{d:DesignInstance Type=Magazine_WPF:Magazine}"
        mc:Ignorable="d"
        Title="Magazine System" 
        Height="900" 
        Width="1400"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        MinHeight="800"
        MinWidth="1200">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <view:ParametrizedBooleanToVisibilityConverter x:Key="ParametrizedBooleanToVisibilityConverter"/>
        <view:PositionCountToSizeConverter x:Key="PositionCountToSizeConverter"/>
        <view:MaxColumnsConverter x:Key="MaxColumnsConverter"/>
        <view:ItemLimitConverter x:Key="ItemLimitConverter"/>
        <view:ItemLimitExceededConverter x:Key="ItemLimitExceededConverter"/>

        <!-- Unified warning template (uses TargetName inside ControlTemplate.Triggers) -->
        <ControlTemplate x:Key="WarningTemplate" TargetType="ContentControl">
            <Border x:Name="Border"
                    Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="40"
                    Margin="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MaxWidth="600"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock x:Name="Icon"
                               Text="⚠"
                               FontSize="48"
                               Foreground="#F39C12"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,16"/>
                    <TextBlock x:Name="Title"
                               Text="View Not Available"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#333333"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,12"/>
                    <TextBlock x:Name="Message"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,16">
                        <Run x:Name="MessageText" Text="This view has exceeded its maximum capacity."/>
                        <LineBreak/>
                        <Run Text="You currently have "/>
                        <Run Text="{Binding PositionCount}" FontWeight="Bold"/>
                        <Run Text=" positions selected."/>
                    </TextBlock>
                    <Border x:Name="TipBorder"
                            Background="#FFF3CD"
                            BorderBrush="#F39C12"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,8,0,0">
                        <TextBlock x:Name="Tip"
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="#856404">
                            <Run Text="💡 "/>
                            <Run x:Name="TipText" Text="Please adjust the number of positions."/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <!-- Rotary: IsRotary=True and PositionCount > 100 -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsRotary}" Value="True"/>
                        <Condition Binding="{Binding PositionCount, Converter={StaticResource ItemLimitExceededConverter}, ConverterParameter=100}" Value="Visible"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="Border" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="Icon" Property="Foreground" Value="#F39C12"/>
                    <Setter TargetName="Title" Property="Text" Value="Rotary View Not Available"/>
                    <Setter TargetName="MessageText" Property="Text" Value="The rotary view supports a maximum of 100 positions."/>
                    <Setter TargetName="TipBorder" Property="Background" Value="#FFF3CD"/>
                    <Setter TargetName="TipBorder" Property="BorderBrush" Value="#F39C12"/>
                    <Setter TargetName="Tip" Property="Foreground" Value="#856404"/>
                    <Setter TargetName="TipText" Property="Text" Value="Please reduce the number of positions to 100 or less, or use the Linear view instead."/>
                </MultiDataTrigger>

                <!-- Linear: IsRotary=False and PositionCount > 500 -->
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IsRotary}" Value="False"/>
                        <Condition Binding="{Binding PositionCount, Converter={StaticResource ItemLimitExceededConverter}, ConverterParameter=500}" Value="Visible"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="Border" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="Icon" Property="Foreground" Value="#E74C3C"/>
                    <Setter TargetName="Title" Property="Text" Value="Too Many Positions"/>
                    <Setter TargetName="MessageText" Property="Text" Value="The linear view supports a maximum of 500 positions."/>
                    <Setter TargetName="TipBorder" Property="Background" Value="#F8D7DA"/>
                    <Setter TargetName="TipBorder" Property="BorderBrush" Value="#E74C3C"/>
                    <Setter TargetName="Tip" Property="Foreground" Value="#721C24"/>
                    <Setter TargetName="TipText" Property="Text" Value="Please reduce the number of positions to 500 or less to view the magazine layout."/>
                </MultiDataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,12,0,6"/>
        </Style>
        
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <TextBlock Text="Magazine Control System" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="#0078D4" 
                       Padding="20,12"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <StackPanel Margin="20,20,20,20" VerticalAlignment="Top">
                    
                    <!-- Position Settings Section -->
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Position Settings"/>
                    
                    <TextBlock Text="Number of Positions:" Foreground="#666666" FontSize="11"/>
                    <TextBox x:Name="txtPositions" 
                             Text="{Binding PositionCount, Mode=TwoWay}" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Width="80"
                             HorizontalAlignment="Left"/>
                    
                    <Button x:Name="btnAddMagazine" 
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding UpdateMagazineCommand}"
                            Width="Auto">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🔄" Margin="0,0,6,0"/>
                                <TextBlock Text="Update Magazine"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    
                    <CheckBox x:Name="chbRotary" 
                              Style="{StaticResource CheckBoxStyle}"
                              IsChecked="{Binding IsRotary, Mode=TwoWay}" 
                              Content="Enable Rotary Mode"/>
                    
                    <!-- Placement Search Section -->
                    <TextBlock Style="{StaticResource HeaderTextStyle}" Text="Find Placement"/>
                    
                    <TextBlock Text="Spaces Needed:" Foreground="#666666" FontSize="11"/>
                    <TextBox x:Name="txtNeededPlaces" 
                             Text="{Binding NeededPlaces, Mode=TwoWay}" 
                             Style="{StaticResource InputTextBoxStyle}"
                             Width="80"
                             HorizontalAlignment="Left"/>
                    
                    <Button x:Name="btnNeededPlace" 
                            Style="{StaticResource ActionButtonStyle}"
                            Command="{Binding FindFreePlaceCommand}"
                            Width="Auto">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🔍" Margin="0,0,6,0"/>
                                <TextBlock Text="Find Free Space"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    
                    <!-- Info Section -->
                    <Border Background="#E8F4F8" BorderBrush="#0078D4" BorderThickness="1" CornerRadius="4" Margin="0,20,0,0" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Last Result:" FontWeight="SemiBold" Foreground="#0078D4" FontSize="11"/>
                            <TextBlock Text="{Binding LastFoundPosition, StringFormat='Position: {0}'}" 
                                       Foreground="#333333" 
                                       FontSize="12"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Right Panel - Visualization -->
            <Grid Grid.Column="1" Background="White">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Border Background="White" CornerRadius="4" Margin="20" BorderBrush="#E0E0E0" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Magazine Visualization" 
                                       FontSize="14" 
                                       FontWeight="SemiBold" 
                                       Foreground="#333333"
                                       Padding="16,12"/>
                            
                            <Border Background="#F9F9F9" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0"/>
                        
                        <!-- Linear View -->
                        <Grid x:Name="linearRect" 
                              Visibility="{Binding IsRotary, Converter={StaticResource ParametrizedBooleanToVisibilityConverter}, ConverterParameter=False}">
                            
                            <!-- Linear Display (only if <= 500 items) -->
                            <StackPanel Margin="16,16,16,16"
                                        Visibility="{Binding PositionCount, Converter={StaticResource ItemLimitConverter}, ConverterParameter=500}">
                                <!-- Occupied Indicator -->
                                <TextBlock Text="Occupied Slots" FontSize="11" Foreground="#666666" Margin="0,0,0,6"/>
                                <ItemsControl ItemsSource="{Binding Positions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding Positions.Count, Converter={StaticResource MaxColumnsConverter}}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Rectangle Width="14" Height="30" Fill="#E74C3C" Margin="2"
                                                       Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- Available Slots with Checkboxes -->
                                <TextBlock Text="Available Slots (Interactive)" FontSize="11" Foreground="#666666" Margin="0,16,0,6"/>
                                <ItemsControl ItemsSource="{Binding Positions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <UniformGrid Columns="{Binding Positions.Count, Converter={StaticResource MaxColumnsConverter}}"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Width="20" Height="34" Margin="2"
                                                  Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <!-- Background Rectangle -->
                                                <Rectangle Width="14" Height="30" Fill="#3498DB" VerticalAlignment="Center"/>
                                                <!-- Checkbox Overlay -->
                                                <CheckBox HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          IsChecked="{Binding IsChecked}"
                                                          Background="Transparent"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>

                        <!-- Rotary View -->
                        <Grid Grid.Row="0" x:Name="circleRect" 
                              Visibility="{Binding IsRotary, Converter={StaticResource ParametrizedBooleanToVisibilityConverter}}">
                            
                            <!-- Rotary Display (only if <= 100 items) -->
                            <Grid Visibility="{Binding PositionCount, Converter={StaticResource ItemLimitConverter}, ConverterParameter=100}">
                                <Viewbox Stretch="Uniform" Margin="20">
                                <Grid Width="800" Height="800">
                                    <!-- Title -->
                                    <TextBlock Text="Rotary Magazine View" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="#333333" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Margin="0,10,0,0"/>
                                    
                                    <!-- All layers overlaid in same circle for better visibility -->
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0">
                                        
                                        <!-- Base circle for reference -->
                                        <Ellipse Width="700" Height="700" 
                                                 Stroke="#E0E0E0" 
                                                 StrokeThickness="2" 
                                                 Fill="Transparent"/>
                                        
                                        <!-- Available positions (blue background layer) -->
                                        <ItemsControl ItemsSource="{Binding Positions}" 
                                                      Width="700" 
                                                      Height="700">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <view:CircularPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Ellipse Width="60" Height="60" 
                                                             Fill="#3498DB" 
                                                             Stroke="White" 
                                                             StrokeThickness="2"
                                                             Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Occupied positions (red overlay) -->
                                        <ItemsControl ItemsSource="{Binding Positions}" 
                                                      Width="700" 
                                                      Height="700">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <view:CircularPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Ellipse Width="60" Height="60" 
                                                             Fill="#E74C3C" 
                                                             Stroke="White" 
                                                             StrokeThickness="3"
                                                             Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        
                                        <!-- Selection checkboxes (interactive layer) -->
                                        <ItemsControl ItemsSource="{Binding Positions}" 
                                                      Width="700" 
                                                      Height="700">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <view:CircularPanel />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <CheckBox HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"
                                                              Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                              IsChecked="{Binding IsChecked}"
                                                              Margin="0"
                                                              Background="Transparent">
                                                        <CheckBox.LayoutTransform>
                                                            <ScaleTransform ScaleX="2.5" ScaleY="2.5"/>
                                                        </CheckBox.LayoutTransform>
                                                    </CheckBox>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Grid>
                                    
                                    <!-- Legend -->
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center" 
                                                VerticalAlignment="Bottom" 
                                                Margin="0,0,0,20">
                                        <Border Background="White" 
                                                BorderBrush="#E0E0E0" 
                                                BorderThickness="1" 
                                                CornerRadius="4" 
                                                Padding="15,10">
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                                    <Ellipse Width="20" Height="20" Fill="#3498DB" Stroke="White" StrokeThickness="1"/>
                                                    <TextBlock Text="Available" FontSize="14" Foreground="#333333" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                                    <Ellipse Width="20" Height="20" Fill="#E74C3C" Stroke="White" StrokeThickness="1"/>
                                                    <TextBlock Text="Occupied" FontSize="14" Foreground="#333333" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox IsChecked="True" IsEnabled="False" VerticalAlignment="Center"/>
                                                    <TextBlock Text="Selectable" FontSize="14" Foreground="#333333" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Viewbox>
                            </Grid>
                        </Grid>
                        
                        <!-- Unified Warning Message (single template) -->
                        <ContentControl Template="{StaticResource WarningTemplate}"/>
                    </StackPanel>
                </Border>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</Window>
